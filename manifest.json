
{
  "manifest_version": 2,

  "name": "Acme Tutor",
  "version": "1.0",
  "description": "Let us help  you focus on your study",

  "browser_action": {
      "default_icon": "Assets/icons/icon19x19.png",
      "default_title": "Acmetutor POMODORO",
      "default_popup": "work.html"
      
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
    
    
  "icons" : {
    "16" : "Assets/icons/icon16x16.png",
    "19" : "Assets/icons/icon19x19.png",
    "38" : "Assets/icons/icon38x38.png",
    "48" : "Assets/icons/icon48x48.png",
    "128" : "Assets/icons/icon128x128.png"
  },
  
  "permissions": ["<all_urls>"]
}